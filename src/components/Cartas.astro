---
    interface Props{
        imagen: string,
        titular: string,
        serie: string,
        horario: string
    }
    const {imagen,titular,serie,horario} = Astro.props
---

<article class="carta ">
    <figure class="w-full flex flex-col items-center justify-center pt-6">
        <img src={imagen} alt={titular}/>
        <figcaption class="w-full flex flex-col gap-y-4">
            <div class="flex flex-col items-center">
                <h3 class="mt-4 font-bold md:text-4xl text-2xl text-center">{titular}</h3>
                <div class="flex flex-row items-center gap-x-8 py-4">
                    <h4>Ma√±ana <br/> {horario}</h4>
                    <button class="bg-black px-8">Ver</button>
                </div>
            </div>
            <div class="w-full h-full flex flex-row justify-evenly border-white border-t-2 py-2">
                <p>{serie}</p>
                <img src="/vector.svg" alt={serie} />
            </div>
        </figcaption>
    </figure>
</article>

<style scoped>
    .carta{
        width: 85%;
        background-color: #540080;
        margin: auto;
    }
    @media screen and (width <= 1024px) {
        .carta{
            width: 60%;
            margin-block: 2rem;
        }
    }
</style>