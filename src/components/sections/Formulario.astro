---
    import paises from "../../paises.json"
    

---

<section class="py-40">
    <form class="w-full">
        <fieldset class="w-11/12 flex lg:flex-row flex-col items-center justify-around mx-auto gap-y-8">
            <div class="flex flex-col items-center justify-center text-left">
                <legend class="md:text-5xl text-4xl md:text-left text-center">Suscr√≠bete a nuestra newsletter</legend>
                <div class="w-full flex flex-col mt-4">
                    <label class="text-xl font-bold" for="nombre">Nombre completo</label>
                    <input class="w-[95%] rounded-xl mb-4 text-black" id="nombre" type="text" />
                    <label class="text-xl font-bold" for="email">Correo Electronico</label>
                    <input class="w-[95%] rounded-xl mb-4 text-black" id="email" type="email" />
                    <label class="text-xl font-bold" for="pais">Pais</label>
                    <select class="w-[95%] rounded-xl mb-4 text-black" id="pais">
                        {paises.map(pais => (
                            <option class="bg-blue-900" value={pais}>{pais}</option>
                        ))}
                    </select>
                    <input 
                    class="md:w-[35%] cursor-pointer w-1/2 rounded-full text-2xl font-semibold text-center mx-auto py-1 mt-4 btn__suscribirse" 
                    type="submit" 
                    value="Suscribirme" />
                </div>
            </div>
            <div>
                <img class="img__form" src="/image_form.jpg" alt="banner formulario" />
            </div>
        </fieldset>
    </form>
</section>

<style scoped>
    .img__form{
        border-radius: 2rem;
    }
    .btn__suscribirse{
        background-color: #779900;
        transition: all 0.3s ease-in-out;
    }
    .btn__suscribirse:hover{
        background-color: #607a02d4;
    }
</style>